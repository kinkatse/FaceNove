      window.unlike_red_url = "<%= image_url('Post_Unlike_Red.png') %>";

      window.comment_blue_url = "<%= image_url('Post_Comment_Blue.png') %>";
      window.comment_green_url = "<%= image_url('Post_Comment_Green.png') %>";
      window.comment_red_url = "<%= image_url('Post_Comment_Red.png') %>";
    </script>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
